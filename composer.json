{
    "name": "maxepam2015/shopify-integration",
    "version": "1.0.0",
    "description": "A Laravel package for integrating Shopify API",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Max\\ShopifyIntegration\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Max",
            "email": "panicmax21@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Max\\ShopifyIntegration\\ShopifyServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "autoload-dev": {
        "psr-4": {
            "Max\\ShopifyIntegration\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    }
}
